<div class="absolute inset-0 w-full h-full overflow-hidden pointer-events-none">
  <video 
    id="hero-video"
    autoplay 
    loop 
    muted 
    playsinline 
    preload="auto"
    class="absolute inset-0 w-full h-full object-cover z-0"
  >
    <source src={`${import.meta.env.BASE_URL}video/bg-video.mp4`} type="video/mp4" />
  </video>

  <div class="absolute inset-0 bg-black/40 z-10"></div>
</div>

<script>
  // Script de seguridad para forzar reproducción en móviles
  const video = document.getElementById('hero-video') as HTMLVideoElement;
  if (video) {
    video.muted = true; // Requerido por navegadores
    video.play().catch((error) => {
      console.log("Autoplay bloqueado, intentando forzar:", error);
    });
  }
</script>