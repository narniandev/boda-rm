---
import VideoBackground from '../common/VideoBackground.astro';
import { SITE_CONFIG } from '../../data/config';
---

<section class="relative h-screen w-full flex flex-col items-center justify-center text-center px-6 overflow-hidden bg-black">
  
  <VideoBackground />

  <div class="relative z-20 flex flex-col gap-4 text-white">
    <p class="uppercase tracking-widest text-xs mb-2 text-white/90">Nos Casamos</p>
    
    <h1 class="font-serif text-5xl md:text-6xl leading-tight text-white drop-shadow-lg">
      {SITE_CONFIG.couple.groom_name} <br />
      <span class="text-2xl">&</span> <br />
      {SITE_CONFIG.couple.bride_name}
    </h1>
    
    <p class="mt-4 text-lg font-light italic text-white/90">14 de Diciembre, 2025</p>
  </div>
</section>
