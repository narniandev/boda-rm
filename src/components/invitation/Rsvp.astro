---
import Button from '../common/Button.astro';
import { SITE_CONFIG } from '../../data/config';

interface Props {
  guestName: string;
}

const { guestName } = Astro.props;

// Mensaje pre-llenado para WhatsApp
const waMessage = `Hola David y Abigail, soy ${guestName} y confirmo mi asistencia a su boda.`;
const waUrl = `https://wa.me/${SITE_CONFIG.links.whatsapp}?text=${encodeURIComponent(waMessage)}`;
---

<section class="py-16 px-6 bg-wedding-light text-center">
  <h2 class="font-serif text-3xl text-wedding-primary mb-4">Confirma tu asistencia</h2>
  <p class="text-wedding-primary mb-2 max-w-md mx-auto">
    Tu presencia es muy importante para nosotros. Por favor, confirma tu asistencia.
  </p>
  <p class="text-wedding-primary mb-8 max-w-md mx-auto">Fecha m√°xima para confirmar: <strong>4 de Diciembre</strong></p>
  
  <Button href={waUrl} text="Confirmar por WhatsApp" target="_blank" />
</section>